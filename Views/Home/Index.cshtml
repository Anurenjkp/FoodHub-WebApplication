<div class="container" id="restlist">
    <h4>Restaurants</h4>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var restaurant in Model)
        {
            <div class="col">
                <div class="card h-100" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/images1/@restaurant.logo" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h4 class="card-title restName">@restaurant.RName</h4>
                                <p class="card-text"><em>@restaurant.RDescription </em></p>
                                <button class="btn btn-warning align-bottom">@Html.ActionLink("Order Now", "Menu", new { restaurantId = @restaurant.Rid }, new { @class = "nav-link" })</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section scripts{
    <script>
        document.getElementById("scrollbutton").addEventListener("click", scrollToElement);


        function scrollToElement() {
            const element = document.getElementById("restlist");
            const targetOffset = element.offsetTop;
            const initialOffset = window.pageYOffset;
            const distance = targetOffset - initialOffset;
            const duration = 1000; // Duration in milliseconds
            const fps = 60;
            const step = distance / (duration / (1000 / fps));
            let currentOffset = initialOffset;


            const scrollInterval = setInterval(() => {
                currentOffset += step;
                window.scrollTo(0, currentOffset);

                if (Math.abs(currentOffset - targetOffset) < Math.abs(step)) {
                    clearInterval(scrollInterval);
                    window.scrollTo(0, targetOffset);
                }
            }, 1000 / fps);
        }
    </script>
    }