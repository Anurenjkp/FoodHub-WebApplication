@model IEnumerable<FoodHub.Models.Food>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.restname</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
      
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.veg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foodCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.veg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.foodCount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Fid }) |
            @Html.ActionLink("Details", "Details", new { id=item.Fid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Fid })
        </td>
    </tr>
}

</table>
